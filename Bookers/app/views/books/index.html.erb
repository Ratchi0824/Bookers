<head>
	<meta charset="utf-8">
</head>
<body>
<%= flash[:notice] %>
<h1>Books</h1>
<table>
	<table border ="0">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
			<% @books.each do |book| %>
			<tr>
			<td><%= book.title %><td/>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sureï¼Ÿ"}%></td>
			<% end %>
		</tr>
	</tbody>
</table>
<h2>Newbook</h2>
<% if @book.errors.any? %>
	<%= @book.errors.count %> errors prohibited this book from being saved:
	<% @book.errors.full_messages.each do |message| %>
		<p><%= message %></p>
	<% end %>
<% end %>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>
</body>